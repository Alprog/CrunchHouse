{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "C# build",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "C++ build godot-cpp debug",
            "group": "build",

            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/godot-cpp"
            },
            "command": "scons",
            "args": [
                "target=template_debug",
                "platform=windows",
                "-j8"
            ],
            
            "problemMatcher": "$msCompile"
        },
        {
            "label": "C++ build godot-cpp release",
            "group": "build",

            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/godot-cpp"
            },
            "command": "scons",           
            "args": [
                "target=template_release",
                "platform=windows",
                "-j8"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "C++ build test debug",
            "group": "build",

            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "command": "scons",
            "args": [
                "target=template_debug",
                "platform=windows",
                "-j8"
            ],            
            "problemMatcher": "$msCompile"
        },
        {
            "label": "C++ build test release",
            "type": "shell",
            "group": "build",

            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "command": "scons",            
            "args": [
                "target=template_release",
                "platform=windows",
                "-j8"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}